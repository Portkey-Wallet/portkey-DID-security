{
  "OpenTelemetry": {
    "ServiceName": "CASecurity.Silo",
    "ServiceVersion": "v1.0.0",
    "CollectorEndpoint": "http://localhost:4315"
  },
  "Orleans": {
    "ClusterId": "CASecuritySiloCluster",
    "ServiceId": "CASecurityOrleansBasicService",
    "AdvertisedIP": "127.0.0.1",
    "GatewayPort" : 20001,
    "SiloPort": 10001,
    "MongoDBClient": "mongodb://127.0.0.1:27017/?maxPoolSize=555",
    "DataBase": "CASecurityOrleansDB",
    "DashboardUserName": "admin",
    "DashboardPassword": "123456",
    "DashboardCounterUpdateIntervalMs": 1000,
    "DashboardPort": 8088,
    "EventStoreConnection": "ConnectTo=tcp://localhost:1113; HeartBeatTimeout=500",
    "ClusterDbConnection": "127.0.0.1:6379",
    "ClusterDbNumber": 0,
    "GrainStorageDbConnection": "127.0.0.1:6379",
    "GrainStorageDbNumber": 0
  },
  "CoinGecko": {
    "CoinIdMapping": {
      "ELF": "aelf"
    }
  },
  "ConnectionStrings": {
    "Default": "mongodb://127.0.0.1:27017/CASecurity"
  },
  "GraphQL": {
    "Configuration": "http://127.0.0.1:8083/Indexer_DApp/PortKeyIndexerCASchema/graphql"
  },
  "ElasticUris": {
    "Uris": [
      "http://127.0.0.1:9200"
    ]
  },
  "IndexSetting": {
    "NumberOfShards": 5,
    "NumberOfReplicas": 1,
    "IndexPrefix": "CAServer"
  },
  "Contract": {
    "Delay": 2000,
    "RetryDelay": 5000,
    "RetryTimes": 5,
    "SafeBlockHeight": 50
  },
  "Chains": {
    "ChainInfos": {
      "AELF": {
        "ChainId": "AELF",
        "BaseUrl": "http://127.0.0.1:8000",
        "ContractAddress": "***",
        "TokenContractAddress": "***",
        "CrossChainContractAddress": "***",
        "PrivateKey": "***",
        "IsMainChain": true
      },
      "tDVV": {
        "ChainId": "tDVV",
        "BaseUrl": "http://127.0.0.1:8000",
        "ContractAddress": "***",
        "TokenContractAddress": "***",
        "CrossChainContractAddress": "***",
        "PrivateKey": "***",
        "IsMainChain": false
      }
    }
  },
  "CAAccountSetting": {
    "CAAccountRequestInfoMaxLength": 100,
    "CAAccountRequestInfoExpirationTime": 1
  },
  "TokenPriceExpirationTime":{
    "Time": 3600
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Default": "Debug",
        "System": "Warning",
        "Orleans": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}{Offset:zzz}][{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs/log-{Date}.log",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}{Offset:zzz}][{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15
        }
      }
    ]
  }
}